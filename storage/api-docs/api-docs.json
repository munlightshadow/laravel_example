        "/auth/registration": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Register a user",
                "operationId": "Register",
                "requestBody": {
                    "description": "Register credentials",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "name": {
                                        "description": "User login",
                                        "type": "string",
                                        "example": "user"
                                    },
                                    "email": {
                                        "description": "User login",
                                        "type": "string",
                                        "example": "user@test.com"
                                    },
                                    "password": {
                                        "description": "User login",
                                        "type": "string",
                                        "example": "qweqwe"
                                    },
                                    "c_password": {
                                        "description": "User login",
                                        "type": "string",
                                        "example": "qweqwe"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AuthToken"
